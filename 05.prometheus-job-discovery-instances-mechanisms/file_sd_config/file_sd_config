#scrape_configs:
  - job_name: "wyc-linux-servers"
    scrape_interval: 15s
    scrape_timeout: 10s
    scheme: http
    metrics_path: /metrics
    file_sd_configs:
    - files:
      - "/usr/local/prometheus/file-sd-config/wyc-linux-servers.yaml"
      # 刷新文件中内容的间隔时间，默认5m
      refresh_interval: 2s

  - job_name: "jmsco-linux-servers"
    scrape_interval: 15s
